all:
	mkdir -p ../../swupdate/images/www/cgi-bin
	cd control;  make
	cd database; make
	cd logs;     make
	cd plugs;    make
	cd lamp;     make
	cd groups;   make
	cd mobile;   make
	cd system;   make

build:
	mkdir -p ../../swupdate/images/www/cgi-bin
	cd control;  make build
	cd database; make build
	cd logs;     make build
	cd plugs;    make build
	cd lamp;     make build
	cd groups;   make build
	cd mobile;   make build
	cd system;   make build


clean:
	cd control;  make clean
	cd database; make clean
	cd logs;     make clean
	cd plugs;    make clean
	cd lamp;     make clean
	cd groups;   make clean
	cd mobile;   make clean
	cd system;   make clean

